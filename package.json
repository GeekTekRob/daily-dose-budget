{
  "name": "daily-dose-budget",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:server": "npm --workspace server run start",
    "dev:client": "npm --workspace client run dev",
    "dev": "concurrently -n api,web -c blue,green \"npm:dev:server\" \"npm:dev:client\"",
  "dev:server:docker": "docker compose up --build",
  "dev:server:docker:detached": "docker compose up --build -d",
  "dev:server:docker:down": "docker compose down",
  "dev:full": "npm run dev:server:docker:detached && npm --workspace client run dev",
  "build": "npm --workspace client run build",
  "test": "npm --workspace server run test && npm --workspace client run test",
  "test:watch": "npm --workspace server run test:watch"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
